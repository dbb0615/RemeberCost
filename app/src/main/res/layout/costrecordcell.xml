<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CostRecordCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/CostRecordCell_Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left|center_vertical"
            android:layout_marginRight="@dimen/blank_size"
            android:textSize="@dimen/text_size"
            android:lines="@integer/text_maxline1"/>
            <!--android:hint="@string/cost_date"/>-->

        <TextView
            android:id="@+id/CostRecordCell_Type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:layout_marginRight="@dimen/blank_size"
            android:textSize="@dimen/text_size"
            android:lines="@integer/text_maxline1"/>
            <!--android:hint="@string/cost_type"/>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
                <TextView
                    android:id="@+id/CostRecordCell_SubType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_weight="2"
                    android:layout_marginRight="@dimen/blank_size"
                    android:textSize="@dimen/text_size"
                    android:lines="@integer/text_maxline1"/>
                    <!--android:hint="@string/cost_subtype"/>-->

                <TextView
                    android:id="@+id/CostRecordCell_Fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/blank_size"
                    android:textSize="@dimen/number_size"
                    android:lines="@integer/text_maxline1"/>
                    <!--android:hint="@string/cost_fee"/>-->

        </LinearLayout>

        <com.ding.java.remembercost.Other.RemarksButton
            android:id="@+id/CostRecordCell_Remarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:background="@drawable/button_remark_selector"/>

        <TextView
            android:id="@+id/CostRecordCell_null"
            android:layout_width="@dimen/doubleblank_size"
            android:layout_height="wrap_content"/>
    
</LinearLayout>
