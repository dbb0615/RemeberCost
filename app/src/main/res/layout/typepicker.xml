<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|top">

        <ListView
            android:id="@+id/typepicker_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:divider="@color/selected_text"
            android:dividerHeight="1px"
            android:layout_marginBottom="@dimen/blank_size">
            <!--
            android:layout_weight="5"
            android:divider="#fffff"  分割线颜色
            android:dividerHeight="1px"  分割线高度
             android:layout_alignParentBottom="true"-->
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/typepicker_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/typepicker_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"/>
        </LinearLayout>



</LinearLayout>
